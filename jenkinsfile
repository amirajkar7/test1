pipeline {
	agent any 
	environment {
	PATH = "/mnt/build-tools/apache-maven-3.9.11/bin:$PATH"
	}
	
	stages {
		stage ("cloning git repo"){
			steps {
				git url: "https://github.com/amirajkar7/project.git"
			}
		}
		stage ("building project code"){
			steps {
				sh "mvn clean package"
			}
		}
	}

}
